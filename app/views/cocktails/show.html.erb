<div class="container mt-3">
  <div class="card-product">
    <img src="https://source.unsplash.com/featured/?<%= @cocktail.name %>" />
      <div class="card-product-infos">
        <h2><%= @cocktail.name.capitalize %>'s details</h2>
          <%= link_to cocktail_path(@cocktail), method: :delete, data: {confirm: 'Are you sure?'}, class: "ml-3" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <p>Composition :<p>
        <ul class="cocktail-list-dose">
        <% @cocktail.doses.each do |dose| %>
          <li><strong><%= dose.description %> of <%= dose.ingredient.name %></strong></li>
        <% end %>
        </ul>
        <%= link_to new_cocktail_dose_path(@cocktail) do %>
          <i class="fas fa-plus"></i> Add an ingredient
        <% end %>
        <%= link_to cocktails_path do %>
          <i class="fas fa-plus"></i> Back to menu
        <% end %>
      </div>
    </div>
  </div>
</div>



