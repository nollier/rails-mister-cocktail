

<h1><%= "#{@cocktail.name}'s details:" %></h1>

<div class="container my-5">
  <div class="row">
    <div class="col">
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <div class="dose">
          <li><%= dose.description %></li>
          <li><%= dose.ingredient.name %></li>
          <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>
  <%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail) %>
  <%= link_to 'Back to menu', cocktails_path %>





